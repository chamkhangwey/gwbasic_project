10 CLS:KEY OFF
20 DIM SUBJECT$(10)
30 DIM MARK(10)
40 PRINT "Grade and Average Calculation on Subject Marks"
50 PRINT
60 INPUT "Your Name";YOURNAME$
70 INPUT "Your Class";YOURCLASS$
80 INPUT "Number of Subjects";SUBJECTNUMBER%
90 FOR I=0 TO SUBJECTNUMBER%-1
100 INPUT "Subject (Max. 4 characters)";SUBJECT$(I)
110 IF LEN(SUBJECT$(I))>4 THEN GOTO 100
120 INPUT "subject Mark";MARK(I)
130 IF MARK(I)>100 OR MARK(I)<0 THEN GOTO 120
140 IF MARK(I)<>INT(MARK(I)) THEN MARK(I)=INT(MARK(I))
150 TOTALMARK=TOTALMARK+MARK(I)
160 NEXT I
170 GOSUB 310
180 FOR Q=1 TO 9000:NEXT Q
190 CLS
200 LOCATE 5,10:PRINT "Name: ";YOURNAME$
210 LOCATE 7,10:PRINT "Class: ";YOURCLASS$
220 LOCATE 9,10:PRINT "Subj",,"Mark","Grade"
230 LOCATION%=10
240 FOR I=0 TO SUBJECTNUMBER%-1
250 LOCATION%=LOCATION%+1
260 LOCATE LOCATION%,10:PRINT SUBJECT$(I),, MARK(I),GRADE$(I)
270 NEXT I
280 LOCATE 22,10:PRINT "Total Marks:";TOTALMARK
290 LOCATE 24,10:PRINT "Average Marks:";TOTALMARK/SUBJECTNUMBER%
300 END
310 FOR I=0 TO SUBJECTNUMBER%-1
320 IF MARK(I)>=0 AND MARK(I)<41 THEN GRADE$(I)="F9"
330 IF MARK(I)>=41 AND MARK(I)<46 THEN GRADE$(I)="P8"
340 IF MARK(I)>=46 AND MARK(I)<51 THEN GRADE$(I)="P7"
350 IF MARK(I)>=51 AND MARK(I)<56 THEN GRADE$(I)="C6"
360 IF MARK(I)>=56 AND MARK(I)<61 THEN GRADE$(I)="C5"
370 IF MARK(I)>=61 AND MARK(I)<66 THEN GRADE$(I)="C4"
380 IF MARK(I)>=66 AND MARK(I)<71 THEN GRADE$(I)="C3"
390 IF MARK(I)>=71 AND MARK(I)<76 THEN GRADE$(I)="A2"
400 IF MARK(I)>=76 AND MARK(I)<101 THEN GRADE$(I)="A1"
410 NEXT I
